<?xml version="1.0" encoding="utf-8"?>

<!-- The main linear lay out which has all the other Sub layouts -->



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/helperownprofilemainscroll"
    >


<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">
    <!-- Logo -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp"
        android:background="#00A3E8"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="15dp"
        android:paddingTop="0dp">


    </LinearLayout>

    <!-- .............................................................. -->


    <!-- Username details -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:weightSum="1">


        <TextView
            android:id="@+id/HOPName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.54"
            android:paddingLeft="20dp"
            android:text="Saleh Muhammad Khan"
            android:textColor="#00A3E8"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingBottom="5dp"

            android:layout_marginTop="6dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount lended:            "
                android:id="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:paddingLeft="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount donated:         "
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView3" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3424"
                android:id="@+id/HOPAmountDonatedValue"
                android:layout_toEndOf="@+id/textView4"
                android:layout_alignBaseline="@+id/textView5"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toRightOf="@+id/textView4"
                android:layout_marginLeft="46dp" />

            <TextView
                android:visibility="invisible"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs:"
                android:id="@+id/textView4"
                android:textAppearance="?android:attr/textAppearanceSmall"


                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"

                android:id="@+id/HOPAmountLendedValue"
                android:layout_gravity="right"
                android:layout_weight="0.54"

                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/HOPAmountDonatedValue"
                android:layout_alignStart="@+id/HOPAmountDonatedValue" />

            <TextView
                android:visibility="invisible"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs:"
                android:id="@+id/textView5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />


        </RelativeLayout>

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="0dp"
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.54"
            android:paddingLeft="20dp"
            android:text="List of causes you have lended/donated to. "
            android:textColor="#00A3E8" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#00A3E8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/needy_own_causes_listview_layout">
            <!--<ScrollView-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="wrap_content">-->

            <!--</ScrollView>-->

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/HOFList"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp" />

        </LinearLayout>

        <TextView
            android:paddingLeft="20dp"
            android:text=""
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />


    </LinearLayout>



</LinearLayout>

    </LinearLayout>
