    <!-- The main linear lay out which has all the other Sub layouts -->

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <!-- Logo -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#00A3E8"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:weightSum="1">


            <ImageView
                android:id="@+id/listofcau"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:src="@drawable/makeacausetitle"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                />


        </LinearLayout>

        <!-- .............................................................. -->


        <!-- Username details -->




        <LinearLayout
            android:id="@+id/vscvdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">
            android:id="@+id/vscvdf">

            <TextView

                android:layout_marginTop="8dp"
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Description:    "
                android:textColor="#009ACD" />

            <EditText
                android:id="@+id/NMACDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:paddingRight="20dp">

                <!-- android:background="@drawable/textlines" -->

            </EditText>
        </LinearLayout>



        <!-- .............................................................. -->


        <!-- Password Details -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView

                android:layout_marginTop="4dp"
                android:id="@+id/ui32r"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:text="Cause\nType:                "
                android:textColor="#009ACD" />
            <Spinner
                android:id="@+id/cause_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/pasdfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/fsdf4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView


                    android:layout_marginTop="12dp"
                    android:id="@+id/u3441"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:text="Catagory:       "
                    android:textColor="#009ACD" />

                <Spinner
                    android:id="@+id/catagory_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fsd43f4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/u334441"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Amount:           "
                    android:textColor="#009ACD" />

                <EditText
                    android:id="@+id/NMACAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:ems="10"
                    android:paddingRight="20dp"/>




            </LinearLayout>

            <TextView
                android:id="@+id/NMACLati"
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:text="Latitudeeeeeeeeeee"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/NMACLongi"
                android:layout_width="400dp"
                android:layout_height="30dp"
                android:text="Longitudeeeeeeeeee"
                android:visibility="invisible"/>






        </LinearLayout>


        <!-- Login button -->

        <LinearLayout
            android:id="@+id/loginButton_layout"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/NMACMakeACauseButton"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="top|right"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:background="@drawable/make_a_cause_button_changer"
                android:adjustViewBounds="true"


                />
        </LinearLayout>



        <!-- Sign Up Button Details -->


    </LinearLayout>

    </RelativeLayout>
<!--</ScrollView>-->