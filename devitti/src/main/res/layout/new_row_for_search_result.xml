<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A3E8"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="5dp"

    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#00A3E8"
        android:id="@+id/linearLayout2" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:orientation="horizontal">


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Percentage of amount given: "
        android:id="@+id/NECLISTPercentageCompleted"
        android:textColor="#ffdcffe5"


        android:layout_below="@+id/textView423"
        android:layout_toRightOf="@+id/newRowtypeImage"
        android:layout_toLeftOf="@+id/NewRowPercentageCompletedValue"
        android:layout_toStartOf="@+id/NewRowPercentageCompletedValue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100%"
        android:id="@+id/NewRowPercentageCompletedValue"
        android:layout_below="@+id/NewRowCatagoryOfCause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffdcffe5"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The cause is completed"
        android:id="@+id/NewRowStatusOfCause"
        android:textColor="#ffdcffe5"

        android:layout_toEndOf="@+id/newRowtypeImage"
        android:layout_below="@+id/NECLISTPercentageCompleted"
        android:layout_toRightOf="@+id/newRowtypeImage"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="description this is some random text that you can show here .. it can have a limit lets just see how long it can be .. in my opinion it cannot be any  longer that 500 characters but hey who knows it could be larger:) heheehehehehe omg it can be very long .. "
        android:id="@+id/NewRowDescription"
        android:textColor="#ffddceff"
        android:paddingBottom="5dp"


        android:layout_toEndOf="@+id/newRowtypeImage"
        android:layout_alignBottom="@+id/newRowtypeImage"
        android:layout_toRightOf="@+id/newRowtypeImage"
        android:layout_below="@+id/NewRowStatusOfCause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Education"
        android:id="@+id/NewRowCatagoryOfCause"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/newRowtypeImage"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newRowtypeImage"
        android:src="@drawable/donationimage"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Catagory: "
        android:id="@+id/textView423"
        android:textColor="#ffffffff"

        android:layout_alignLeft="@+id/NECLISTPercentageCompleted"
        android:layout_alignStart="@+id/NECLISTPercentageCompleted"
        android:layout_alignTop="@+id/newRowtypeImage"
        android:layout_toRightOf="@+id/newRowtypeImage"
        />

    <TextView
        android:visibility="visible"
        android:id="@+id/newRowdummyNoForListNoStorage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/NECLISTPercentageCompleted"
        android:layout_toEndOf="@+id/NECLISTPercentageCompleted"
        android:layout_alignRight="@+id/NewRowPercentageCompletedValue"
        android:layout_alignEnd="@+id/NewRowPercentageCompletedValue"
        android:layout_above="@+id/NewRowDescription"
        android:layout_below="@+id/NewRowPercentageCompletedValue" />

    <!--<View-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="2dp"-->
    <!--android:background="#c0c0c0"-->
    <!--android:layout_below="@+id/NewRowDescription"/>-->

</RelativeLayout>

